{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "home-ec2-user-cerbot-certs",
      "host": {
        "sourcePath": "/home/ec2-user/www"
      }
    },
    {
      "name": "home-ec2-user-letsencrypt-challenges",
      "host": {
        "sourcePath": "/home/ec2-user/conf"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "maxipaolucci/atomic-coconut-client",
      "hostname": "acclient",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "maxipaolucci/atomic-coconut-server",
      "hostname": "acserver",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "maxipaolucci/atomic-coconut-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "home-ec2-user-letsencrypt-challenges",
          "containerPath": "/etc/letsencrypt"
        },
        {
          "sourceVolume": "home-ec2-user-cerbot-certs",
          "containerPath": "/var/www/certbot"
        }
      ],
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}